    <style>
        .memory-card {
            background: #1a1a2e;
            border: 1px solid #00d4ff;
            border-radius: 5px;
            padding: 1rem;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .memory-card:hover {
            background: #00d4ff;
            color: #1a1a2e;
        }

        .memory-card.flipped {
            background: #00ff88;
            color: #1a1a2e;
        }

        .puzzle-block {
            background: #1a1a2e;
            border: 1px solid #ff00ff;
            border-radius: 5px;
            padding: 0.5rem 1rem;
            margin: 0.25rem;
            cursor: move;
            display: inline-block;
            font-family: monospace;
        }

        .puzzle-block:hover {
            background: #ff00ff;
            color: #1a1a2e;
        }
    </style>

    <script>
        // Navigation
        function showPage(pageId) {
            // Hide all pages
            document.querySelectorAll('.page').forEach(page => {
                page.classList.remove('active');
            });
            
            // Show selected page
            document.getElementById(pageId).classList.add('active');
            
            // Update nav links
            document.querySelectorAll('.nav-links a').forEach(link => {
                link.classList.remove('active');
            });
            event.target.classList.add('active');
        }

        // Game Functions
        function openGame(gameType) {
            document.getElementById(gameType + '-modal').classList.add('active');
        }

        function closeGame() {
            document.querySelectorAll('.game-modal').forEach(modal => {
                modal.classList.remove('active');
            });
        }

        // Snake Game
        function startSnake() {
            let score = 0;
            const scoreElement = document.getElementById('snake-score');
            
            const gameInterval = setInterval(() => {
                score += 10;
                scoreElement.textContent = score;
                
                if (score >= 100) {
                    clearInterval(gameInterval);
                    alert('üéâ Congratulations! You scored ' + score + ' points!');
                }
            }, 1000);
        }

        // Memory Game
        let flippedCards = [];
        let matchedPairs = 0;

        function flipCard(card) {
            if (card.classList.contains('flipped') || flippedCards.length >= 2) return;
            
            card.classList.add('flipped');
            card.textContent = card.dataset.value;
            flippedCards.push(card);
            
            if (flippedCards.length === 2) {
                setTimeout(() => {
                    if (flippedCards[0].dataset.value === flippedCards[1].dataset.value) {
                        matchedPairs++;
                        if (matchedPairs === 4) {
                            alert('üéâ Congratulations! You matched all pairs!');
                        }
                    } else {
                        flippedCards.forEach(c => {
                            c.classList.remove('flipped');
                            c.textContent = '?';
                        });
                    }
                    flippedCards = [];
                }, 1000);
            }
        }

        // Quiz Game
        function checkAnswer(button, isCorrect) {
            if (isCorrect) {
                button.style.background = '#00ff88';
                alert('üéâ Correct! Great job!');
            } else {
                button.style.background = '#ff4444';
                alert('‚ùå Not quite right. Try again!');
            }
        }

        // Puzzle Game
        function drag(event) {
            event.dataTransfer.setData("text", event.target.dataset.order);
        }

        function checkPuzzle() {
            const blocks = document.querySelectorAll('.puzzle-block');
            let isCorrect = true;
            
            blocks.forEach((block, index) => {
                if (parseInt(block.dataset.order) !== index + 1) {
                    isCorrect = false;
                }
            });
            
            if (isCorrect) {
                alert('üéâ Perfect! You solved the puzzle!');
            } else {
                alert('ü§î Not quite right. Keep trying!');
            }
        }

        // Close modals when clicking outside
        document.querySelectorAll('.game-modal').forEach(modal => {
            modal.addEventListener('click', (e) => {
                if (e.target === modal) {
                    closeGame();
                }
            });
        });
    </script>
